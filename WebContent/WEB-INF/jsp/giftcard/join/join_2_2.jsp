		return;
	}
	else if(jQuery("#ef_chk").is(":checked") == false)
	{
		alert("전자금융 거래약관 동의 체크를 해주세요.");
		jQuery("#ef_chk").focus();
		return;
	}
	else if(jQuery("#email_chk").is(":checked") == false)
	{
		alert("이메일 수집 및 이용안내 동의 체크를 해주세요.");
		jQuery("#email_chk").focus();
		return;
	}
	else
	{
		jQuery("#agree").submit();
	}
}

